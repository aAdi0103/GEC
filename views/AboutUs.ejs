<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>
<style>
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .hide-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
</style>


<body>


    <%- include('partials/header', { currentRoute: currentRoute }) %>
        <!--  hero section  -->
        <section class="relative bg-cover bg-center h-[90vh] flex items-center justify-center"
            style="background-image: url('/images/BackgroundInage.jpg');">
            <div class="bg-black bg-opacity-40 absolute inset-0"></div>

            <div class="relative text-center text-white px-4 max-w-3xl">
                <h1 class="text-3xl md:text-5xl font-semibold leading-tight">
                    Your <span class="text-white font-bold">Trusted</span>
                    <span class="text-yellow-400 font-bold">Admission</span> &
                    <span class="text-yellow-400 font-bold">Career</span> Guide since
                    <span class="text-white font-bold">2005</span>
                </h1>
            </div>
        </section>

        <!-- About Banner Section -->
        <section class="bg-[#fdf3e9] text-center px-6 md:px-56 py-4 md:py-8">
            <h2 class="text-4xl md:text-[1.6rem] font-bold mb-6 text-gray-900">
                India-rooted. Globally Connected. Student-Centric
            </h2>
            <p class="text-base md:text-lg font-semibold text-gray-800 leading-relaxed">
                Global Education Council (GEC), headquartered in New Delhi, has helped thousands of students secure
                admissions in India and across global universities since 2005. We simplify the complex admission journey
                with reliable, personalized, and transparent guidance.
            </p>
        </section>

        <section class="bg-gray-100 px-4 sm:px-8 md:px-28 py-10">
  <h2 class="text-3xl md:text-4xl font-bold text-center text-gray-800 mb-10">
    What We Offer?
  </h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
    <!-- Card 1 -->
    <div onclick="openModal('admission')"
      class="bg-white rounded-xl shadow-lg overflow-hidden cursor-pointer transform transition hover:scale-105 hover:shadow-xl duration-300">
      <img src="/images/HomePage1.jpg" alt="Offer 1" class="w-full h-48 object-cover">
      <div class="p-6 text-center">
        <h3 class="text-lg font-bold text-gray-600">Direct Admission Support</h3>
      </div>
    </div>

    <!-- Card 2 -->
    <div onclick="openModal('counseling')"
      class="bg-white rounded-xl shadow-lg overflow-hidden cursor-pointer transform transition hover:scale-105 hover:shadow-xl duration-300">
      <img src="/images/HomePage2.jpg" alt="Offer 2" class="w-full h-48 object-cover">
      <div class="p-6 text-center">
        <h3 class="text-lg font-bold text-gray-600">Expert Counseling</h3>
      </div>
    </div>

    <!-- Card 3 -->
    <div onclick="openModal('tieups')"
      class="bg-white rounded-xl shadow-lg overflow-hidden cursor-pointer transform transition hover:scale-105 hover:shadow-xl duration-300">
      <img src="/images/HomePage3.jpg" alt="Offer 3" class="w-full h-48 object-cover">
      <div class="p-6 text-center">
        <h3 class="text-lg font-bold text-gray-600">Tie-Ups</h3>
      </div>
    </div>
  </div>

  <!-- Modal -->
  <div id="offerModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden z-50">
    <div class="bg-white rounded-lg shadow-xl p-6 w-11/12 md:w-1/2 relative">
      <button onclick="closeModal()"
        class="absolute top-2 right-3 text-gray-600 hover:text-red-600 text-2xl font-bold">&times;</button>
      <h3 class="text-xl font-bold mb-3 text-gray-800">Offer Details</h3>
      <p id="modalContent" class="text-gray-700">Some info here...</p>
    </div>
  </div>

  <script>
    const contentMap = {
      admission: "• Direct admission support for B.Tech, M.Tech, MBBS, BDS, MDS, B.Pharma, Nursing, MBA, and more.",
      counseling: "• Expert counseling and career guidance tailored to your academic and professional goals.",
      tieups: "• Tie-ups with globally accredited and government-approved institutions for international education."
    };

    function openModal(key) {
      const content = contentMap[key] || "Information not found.";
      document.getElementById("modalContent").innerText = content;
      document.getElementById("offerModal").classList.remove("hidden");
    }

    function closeModal() {
      document.getElementById("offerModal").classList.add("hidden");
    }

    window.addEventListener("click", function (e) {
      const modal = document.getElementById("offerModal");
      if (e.target === modal) {
        closeModal();
      }
    });
  </script>
</section>



       <section class="bg-gray-100 px-4 sm:px-6 py-12">
  <div class="max-w-7xl mx-auto">
    <!-- Header Section -->
    <div class="mb-6 text-center sm:text-left sm:pl-2">
        <h2 class="text-3xl md:text-4xl font-extrabold text-center text-gray-800">
Our Global Footprint  </h2>
      <h2 class="text-xl md:text-2xl font-medium text-center text-gray-700">
We facilitate admissions in leading universities across </h2>
    </div>

    <!-- Card + Navigation -->
    <div class="flex items-center justify-center gap-3">
      <!-- Left Button -->
      <button
        onclick="scrollCardsLeft()"
        class="hidden sm:inline-flex bg-white hover:bg-blue-100 border border-gray-300 text-blue-600 text-xl p-3 rounded-full shadow"
      >
        &#10094;
      </button>

      <!-- Scrollable Card Container -->
      <div
        id="cardContainer"
        class="flex gap-4 overflow-x-auto scroll-smooth snap-x snap-mandatory hide-scrollbar py-2 w-full"
      >
        <% const countries = [
          { title: "Europe", image: "/images/flags/uk.png" },
          { title: "USA", image: "/images/flags/usa.png" },
          { title: "Canada", image: "/images/flags/canada.png" },
          { title: "Australia", image: "/images/flags/australia.png" },
          { title: "Germany", image: "/images/flags/germany.png" },
          { title: "France", image: "/images/flags/france.png" },
          { title: "Italy", image: "/images/flags/italy.png" },
          { title: "Singapore", image: "/images/flags/singapore.png" },
          { title: "New Zealand", image: "/images/flags/nz.png" }
        ]; %>

        <% countries.forEach((item) => { %>
          <div class="bg-white rounded-xl border border-gray-200 shadow p-4 min-w-[190px] max-w-[190px] text-center snap-start">
            <div class="w-28 h-28 mx-auto mb-3">
              <img
                src="<%= item.image %>"
                alt="<%= item.title %>"
                class="w-full h-full object-cover rounded-full border"
              />
            </div>
            <button class="w-full bg-gray-100 text-gray-800 text-sm py-1 rounded-md hover:bg-gray-200 transition font-medium">
              <%= item.title %>
            </button>
          </div>
        <% }); %>
      </div>

      <!-- Right Button -->
      <button
        onclick="scrollCardsRight()"
        class="hidden sm:inline-flex bg-white hover:bg-blue-100 border border-gray-300 text-blue-600 text-xl p-3 rounded-full shadow"
      >
        &#10095;
      </button>
    </div>
  </div>
</section>



        <!-- Last Section -->
        <section class="relative w-full bg-cover bg-center bg-no-repeat py-16 text-center"
    style="background-image: url('/images/2ndpagelast.png');">

    <!-- Overlay -->
    <div class="absolute inset-0 z-0" style="background-color: rgba(21, 127, 25, 0.801);"></div>

    <!-- Text Content -->
    <div class="relative z-10 w-full px-4 sm:px-6 md:px-12 text-white max-w-screen-xl mx-auto">
    <h2 class="text-base sm:text-lg md:text-3xl font-semibold md:font-bold leading-snug md:leading-normal">
        Unlock global careers in medicine, engineering and health sciences.
        GEC connects your ambition with international education and limitless opportunities.
    </h2>
</div>

</section>




        <%- include('partials/footer', { currentRoute: currentRoute }) %>

 <script>
  function scrollCardsLeft() {
    document.getElementById("cardContainer").scrollBy({ left: -300, behavior: "smooth" });
  }
  function scrollCardsRight() {
    document.getElementById("cardContainer").scrollBy({ left: 300, behavior: "smooth" });
  }
</script>

</body>

</html>