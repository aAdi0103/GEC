<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" href="/style.css" />
  <title>Admission Contact</title>
</head>
<body class="font-roboto">


  <%- include('partials/header', { currentRoute: currentRoute }) %>


<!-- ✅ Success Toast -->
<div id="toast-success" class="fixed top-6 left-1/2 transform -translate-x-1/2 bg-green-500 text-white px-6 py-3 rounded-lg shadow-lg opacity-0 hidden transition-opacity duration-300 z-50">
   Submitted successfully!
</div>


  <!-- Hero Section -->
  <section class="relative w-full h-[400px] sm:h-[400px] md:h-[540px] lg:h-[75vh] overflow-hidden">
    <div class="absolute inset-0">
      <img src="/images/lastpagemain.png" alt="Admission Background" class="w-full h-full object-cover" />
      <div class="absolute inset-0 bg-gradient-to-b from-black/70 to-black/30"></div>
    </div>

    <div class="relative z-10 flex flex-col items-center justify-center h-full px-6 text-white text-center">
      <h2 class="text-3xl sm:text-5xl font-extrabold">
        Let’s Start Your <span class="text-orange-400">Admission</span> Journey
      </h2>
      <p class="mt-4 max-w-2xl text-base sm:text-lg">
        Whether you’re a student exploring your future or a parent seeking the best for your child, our expert counsellors are here to help.
      </p>
    </div>
  </section>

  
  <!-- Contact Form -->
  <section id="contact" class="bg-white mt-[-10px] py-10 px-4 sm:px-6 lg:px-12">
    <div class="max-w-7xl mx-auto bg-white shadow-2xl rounded-3xl p-10 border border-gray-200">
      <h2 class="text-4xl font-bold text-center text-gray-900 mb-1">Get In Touch</h2>
      <p class="text-center text-gray-600 mb-10 text-lg">Welcome! Please fill in the details below, and we'll get back to you.</p>

      <form method="POST" action="/submit-form" class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Left Form Inputs -->
        <div class="flex flex-col gap-6">
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Name</label>
            <input type="text" name="name" placeholder="Enter your Full Name"
              class="w-full px-5 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 focus:outline-none" required />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input type="email" name="email" placeholder="Enter your Email"
              class="w-full px-5 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 focus:outline-none" required />
          </div>

          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">Mobile</label>
            <input type="tel" name="mobile" placeholder="Enter your Mobile Number"
              class="w-full px-5 py-3 border border-gray-300 rounded-lg shadow-sm focus:ring-2 focus:ring-orange-400 focus:outline-none" required />
          </div>
        </div>

        <!-- Right Remark Field -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">Remark</label>
         <textarea name="remark"
  placeholder="Enter your Remark in 200 Words"
  rows="6"
  class="w-full px-5 py-3 border border-gray-300 rounded-lg resize-none shadow-sm 
         focus:ring-2 focus:ring-orange-400 focus:outline-none 
         sm:rows-10">
</textarea>

        </div>

        <!-- Submit Button -->
        <div class="col-span-1 lg:col-span-2">
          <button type="submit"
            class="w-full bg-blue-500 hover:bg-blue-600 text-white font-semibold text-lg py-4 rounded-lg transition duration-300">
            Submit
          </button>
        </div>
      </form>
    </div>
  </section>


  



  <!-- Footer Section -->
  <footer class="bg-gray-50 text-gray-800 py-12 px-4 sm:px-10">
    <div class="max-w-7xl mx-auto grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10 text-sm">
      <!-- Left -->
     <div>
  <p class="mb-1">
    Address:
    <a 
      href="https://www.google.com/maps?q=705,+Flat+no+203,+Sector+5,+Vaishali,+Ghaziabad,+Uttar+Pradesh,+201010"
      target="_blank" 
      rel="noopener noreferrer"
      class="text-blue-700 hover:underline"
    >
      705, Flat no 203, Sector 5,<br>
      Vaishali, Ghaziabad,<br>
      Uttar Pradesh – 201010
    </a>
  </p>

  <p class="mb-1">
    Phone:
    <a href="tel:+919392679540" class="text-blue-700 hover:underline">
      +91-9392679540
    </a>
  </p>

  <p>
    Email:
    <a href="mailto:chatdesk.gec@gmail.com" class="text-blue-700 hover:underline">
      chatdesk.gec@gmail.com
    </a>
  </p>
</div>


      <!-- Center -->
      <div class="sm:text-center">
        <h3 class="font-semibold text-lg mb-3">Working Hours</h3>
        <p>Monday – Saturday</p>
        <p>10:00 AM – 6:00 PM</p>
      </div>



    </div>
  </footer>

  <!-- Toast Script -->
  <script>
    const params = new URLSearchParams(window.location.search);
    const success = params.get("success");

    if (success === "true") {
      const toast = document.getElementById("toast-success");
      toast.classList.remove("hidden");
      setTimeout(() => toast.classList.add("opacity-100"), 50); // Fade In

      setTimeout(() => {
        toast.classList.remove("opacity-100"); // Fade Out
        setTimeout(() => toast.classList.add("hidden"), 300);
      }, 3000);

      // Reset the form
      const form = document.querySelector("form");
      if (form) form.reset();

      // Clean URL
      window.history.replaceState(null, null, window.location.pathname);
    }
  </script>

  <%- include('partials/footer', { currentRoute: currentRoute }) %>

</body>
</html>
