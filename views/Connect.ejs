<script>
  function setupInfiniteCarousel(id) {
    const carousel = document.getElementById(id);
    if (!carousel) return; // safeguard if element not found

    const slides = Array.from(carousel.children);
    const slideCount = slides.length;

    // Clone first slide and append
    const firstClone = slides[0].cloneNode(true);
    carousel.appendChild(firstClone);

    let index = 0;

    function moveSlide() {
      index++;
      carousel.style.transition = "transform 1s ease-in-out";
      carousel.style.transform = `translateX(-${index * 100}%)`;

      // When it reaches the clone, reset to the original first slide
      if (index === slideCount) {
        setTimeout(() => {
          carousel.style.transition = "none";
          carousel.style.transform = `translateX(0%)`;
          index = 0;
        }, 1000);
      }
    }

    setInterval(moveSlide, 3000);
  }

  // Call for both carousels
  setupInfiniteCarousel("carousel-desktop");
  setupInfiniteCarousel("carousel-mobile");
</script>



