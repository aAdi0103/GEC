<nav class="bg-white shadow-md px-6 py-4 relative z-50">
  <div class="flex items-center justify-between">
    <!-- Logo -->
    <div class="flex items-center">
      <img src="/images/logo.png" alt="Global Education Council" class="h-10" />
    </div>

    <!-- Hamburger / Close Icon (Mobile) -->
    <div class="md:hidden">
      <button id="mobile-menu-toggle" class="text-blue-600 text-3xl focus:outline-none">
        <span id="menu-icon">&#9776;</span> <!-- ☰ -->
      </button>
    </div>

<!-- Desktop Menu -->
<ul class="hidden md:flex items-center gap-6 font-medium text-gray-800">
  <li>
    <a href="/" class="px-4 py-1 rounded transition duration-200 <%= currentRoute === 'home' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Home</a>
  </li>
  <li>
    <a href="/AboutUs" class="px-4 py-1 rounded transition duration-200 <%= currentRoute === 'about' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">About Us</a>
  </li>
  <li>
    <a href="/StudyAbroad" class="px-4 py-1 rounded transition duration-200 <%= currentRoute === 'abroad' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Study Abroad</a>
  </li>
  <li>
    <a href="/StudyInIndia" class="px-4 py-1 rounded transition duration-200 <%= currentRoute === 'india' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Study in India</a>
  </li>
  <li>
    <a href="/Connect" class="px-4 py-1 rounded transition duration-200 <%= currentRoute === 'contact' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Contact</a>
  </li>
</ul>

<!-- Mobile Menu -->
<div id="mobile-menu" class="md:hidden mt-4 space-y-2 hidden transition-all duration-300 ease-in-out bg-white shadow-md p-4 rounded">
  <a href="/" class="block px-4 py-2 rounded transition duration-200 <%= currentRoute === 'home' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Home</a>
  <a href="/AboutUs" class="block px-4 py-2 rounded transition duration-200 <%= currentRoute === 'about' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">About Us</a>
  <a href="/StudyAbroad" class="block px-4 py-2 rounded transition duration-200 <%= currentRoute === 'abroad' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Study Abroad</a>
  <a href="/StudyInIndia" class="block px-4 py-2 rounded transition duration-200 <%= currentRoute === 'india' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Study in India</a>
  <a href="/Connect" class="block px-4 py-2 rounded transition duration-200 <%= currentRoute === 'contact' ? 'bg-gray-200 text-black' : 'hover:bg-gray-200 hover:text-black' %>">Contact</a>
</div>



  <!-- Toggle + Outside Click Script -->
  <script>
    const toggleBtn = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    const menuIcon = document.getElementById('menu-icon');

    toggleBtn.addEventListener('click', (e) => {
      e.stopPropagation();
      mobileMenu.classList.toggle('hidden');

      // Toggle icon between ☰ and ✖
      menuIcon.innerHTML = mobileMenu.classList.contains('hidden') ? '&#9776;' : '&#10005;';
    });

    // Close menu when clicking outside
    document.addEventListener('click', function (event) {
      if (!mobileMenu.classList.contains('hidden')) {
        const isClickInsideMenu = mobileMenu.contains(event.target);
        const isClickOnToggle = toggleBtn.contains(event.target);

        if (!isClickInsideMenu && !isClickOnToggle) {
          mobileMenu.classList.add('hidden');
          menuIcon.innerHTML = '&#9776;'; // reset to hamburger
        }
      }
    });
  </script>
</nav>
