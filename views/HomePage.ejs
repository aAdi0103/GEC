<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="/style.css">
    <title>Document</title>
</head>

<style>
  /* Hide scrollbar for Chrome, Safari and Opera */
  .hide-scrollbar::-webkit-scrollbar {
    display: none;
  }

  /* Hide scrollbar for IE, Edge and Firefox */
  .hide-scrollbar {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;     /* Firefox */
  }
</style>

<body>
    
    <%- include('partials/header', { currentRoute: currentRoute }) %>
 <section
      class="relative bg-cover bg-center h-[90vh] flex items-center justify-center text-center"
      style="background-image: url('/images/BackgroundInage.jpg');"
    >
      <div class="absolute inset-0 bg-black/60"></div>
      <div class="relative z-10 max-w-6xl px-4">
        <h1 class="text-3xl md:text-5xl font-semibold text-white leading-tight">
          <span class="text-orange-400 font-bold mb-1">Your</span> Gateway <span class="text-gray-300">to</span> <br>
          <span class="text-yellow-400 font-bold">World-Class <span class="text-white">Education – In</span> India <span class="font-thin text-white">and</span> Beyond
        </h1>
        <div class="mt-6 flex flex-col sm:flex-row justify-center gap-4">
  <!-- Primary Button -->
  <a
    href="#"
    class="px-6 py-3 bg-blue-600 text-white rounded-lg shadow-md hover:bg-blue-700 hover:shadow-lg transition duration-300 ease-in-out text-lg font-semibold tracking-wide"
  >
    Explore Courses
  </a>

  <!-- Secondary Button -->
  <a
    href="#"
    class="px-6 py-3 bg-white text-gray-800 border border-gray-300 rounded-lg shadow-sm hover:bg-gray-100 hover:shadow-md transition duration-300 ease-in-out text-lg font-medium tracking-wide"
  >
    View Pricing
  </a>
</div>
      </div>
    </section>



    <!-- Info Section -->
    <section class="bg-[#fef8f4] px-4 py-12 md:py-16">
  <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-10 items-center">
    
    <!-- Text Column -->
    <div class="text-center md:text-left px-2">
      <h2 class="text-2xl md:text-3xl font-extrabold md:font-bold text-gray-800 mb-4 leading-snug text-center md:text-left">
  Transforming Academic Dreams into<br />
  Global Success Stories
</h2>
      <p class="text-gray-700 mb-4 leading-relaxed">
        With over 20 years of excellence in educational consulting, the
        Global Education Council is your trusted partner for pursuing
        top-tier engineering, medical, pharmacy, and nursing courses—across
        India and around the world.
      </p>
      <p class="text-gray-700 leading-relaxed">
        We provide personalized guidance, transparent processes, and
        end-to-end admission support for students aspiring to study in
        India’s leading institutes or globally recognized universities.
      </p>
    </div>

    <!-- Video Placeholder -->
    <div class="w-full aspect-video bg-[#816663] rounded-xl flex items-center justify-center text-white text-lg font-semibold">
      Video
    </div>
    
  </div>
</section>


 <div class="relative mx-auto pt-10 pb-4 mb-10 w-full flex flex-col items-center">
  <h2 class="text-3xl md:text-4xl font-extrabold text-center text-gray-800 mb-6">
    Our Expertise
  </h2>

  <div class="flex flex-wrap justify-center gap-8 px-6 max-w-6xl w-full">
    <% const expertise = [
         { title: "Engineering", subtitle: "(B. Tech, M. Tech)", image: "/images/HomePage1.jpg" },
         { title: "Medical", subtitle: "(MBBS, BDS, MDS, B. Pharma, Nursing)", image: "/images/HomePage2.jpg" },
         { title: "Study Destinations", subtitle: "India | Europe | Canada & More...", image: "/images/HomePage3.jpg" },
       ]; %>
    <% expertise.forEach((item) => { %>
      <div
        class="w-[95%] sm:w-[300px] md:w-[320px] max-w-[320px] bg-white rounded-xl shadow-md hover:shadow-xl transition cursor-pointer"
        onclick="openModal('<%= item.title %>', '<%= item.subtitle %>', '<%= item.image %>')"
      >
        <img src="<%= item.image %>" alt="<%= item.title %>" class="w-full h-44 object-cover rounded-t-xl" />
        <div class="p-5 text-sm">
          <p class="font-semibold text-gray-800 text-lg"><%= item.title %></p>
          <p class="text-gray-600 text-sm"><%= item.subtitle %></p>
        </div>
        <div class="px-5 pb-5">
          <button class="w-full mt-2 bg-blue-50 text-blue-700 py-2 rounded-md hover:bg-blue-100 text-sm transition">
            Get It Now
          </button>
        </div>
      </div>
    <% }) %>
  </div>



</div>


    <div
      id="popupModal"
      class="fixed inset-0 bg-black/50 hidden justify-center items-center z-50"
    >
      <div class="bg-white rounded-lg w-[90%] max-w-md p-6 relative">
        <button
          class="absolute top-3 right-4 text-gray-600 text-xl font-bold"
          onclick="closeModal()"
        >
          &times;
        </button>
        <img id="modalImage" class="w-full h-40 object-cover rounded-md mb-4" />
        <h3 id="modalTitle" class="text-xl font-semibold mb-2"></h3>
        <p id="modalSubtitle" class="text-gray-600 mb-4 text-sm"></p>
        <button
          onclick="closeModal()"
          class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition"
        >
          Close
        </button>
      </div>
    </div>

   <section class="py-10 mb-[-20px] bg-gray-100">
  <div class="max-w-6xl mx-auto px-4">
    <h2 class="text-xl md:text-2xl font-bold text-gray-800 mb-8">
      Why Choose Global Education Council?
    </h2>

<div class="bg-white rounded-lg shadow-sm grid grid-cols-2 md:grid-cols-5 gap-6 gap-y-8 md:gap-y-6 p-6 text-center">
      <% const features = [
        { icon: "/images/Layer_1.png", title: "Global University Network" },
        { icon: "/images/Layer_3.png", title: "1-on-1 University Selection Support" },
        { icon: "/images/Layer_4.png", title: "Personalized Career Counseling" },
        { icon: "/images/Layer_5.png", title: "High Admission & Visa Success Rates" },
        { icon: "/images/Layer_6.png", title: "Visa & Travel Assistance" }
      ]; %>

      <% features.forEach((feature, index) => { %>
        <div class="<%= index === features.length - 1 ? 'col-span-2 flex justify-center md:col-span-1 md:block md:justify-normal' : '' %>">
          <div class="flex flex-col items-center gap-2">
            <img src="<%= feature.icon %>" alt="<%= feature.title %>" class="w-10 h-10 object-contain" />
            <p class="text-sm font-medium text-gray-800 leading-tight"><%= feature.title %></p>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</section>



<section class="w-full bg-gray-100 py-8">
  <div class="w-full relative overflow-hidden px-4 sm:px-6">
    <div class="flex flex-col md:flex-row items-stretch bg-white shadow-md relative rounded-lg overflow-hidden">

      <!-- Left Orange Area (Text Box) -->
      <div
        class="relative z-10 bg-[#ff9500] text-white px-6 sm:px-8 py-10 sm:py-14 w-full md:w-[50%] 
               rounded-b-3xl md:rounded-br-[100px] shadow-xl 
               flex items-center justify-center md:justify-start text-center md:text-left"
      >
        <div class="space-y-3 sm:space-y-4">
          <p class="text-2xl sm:text-3xl font-extrabold">Shape your future with us.</p>
          <p class="text-2xl sm:text-3xl font-extrabold">Learn globally.</p>
          <p class="text-2xl sm:text-3xl font-extrabold">Succeed universally.</p>
        </div>
      </div>

      <!-- Right Image Area (Positioned Under Orange Box) -->
      <div class="absolute inset-0 right-0 z-0 flex justify-end">
        <div class="w-full md:w-[75%] h-full">
          <img
            src="/images/HomePage4.png"
            alt="Education Banner"
            class="w-full h-full object-cover object-center opacity-30 md:opacity-100"
          />
        </div>
      </div>

    </div>
  </div>
</section>




            <%- include('partials/footer', { currentRoute: currentRoute }) %>

     <script>
function scrollCardsLeft() {
  document.getElementById("cardContainer").scrollBy({ left: -300, behavior: "smooth" });
}

function scrollCardsRight() {
  document.getElementById("cardContainer").scrollBy({ left: 300, behavior: "smooth" });
}




      function openModal(title, subtitle, image) {
        document.getElementById("modalTitle").textContent = title;
        document.getElementById("modalSubtitle").textContent = subtitle;
        document.getElementById("modalImage").src = image;
        document.getElementById("popupModal").classList.remove("hidden");
        document.getElementById("popupModal").classList.add("flex");
      }

      function closeModal() {
        document.getElementById("popupModal").classList.add("hidden");
      }
    </script>

</body>
</html>